{
  "name": "breadcrumb-cli",
  "version": "3.6.0",
  "description": "Agent-to-agent coordination via file-attached warnings",
  "author": "Tyler Gibbs",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "breadcrumb": "dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tylergibbs1/breadcrumb.git"
  },
  "bugs": {
    "url": "https://github.com/tylergibbs1/breadcrumb/issues"
  },
  "homepage": "https://github.com/tylergibbs1/breadcrumb#readme",
  "keywords": [
    "cli",
    "agent",
    "ai",
    "llm",
    "claude",
    "warnings",
    "file-context",
    "developer-tools",
    "coordination",
    "session-management"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup src/index.ts --format esm --dts --clean",
    "build:bun": "bun build src/index.ts --outfile dist/index.js --target=bun",
    "test": "node --test",
    "test:bun": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "fast-glob": "^3.3.2",
    "minimatch": "^10.0.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.5.3"
  }
}
