{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "[ -f .breadcrumbs.json ] || breadcrumb init 2>/dev/null || true"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path // empty' | { read file_path; [ -n \"$file_path\" ] && breadcrumb check \"$file_path\" 2>/dev/null || true; }"
          }
        ]
      }
    ]
  }
}
