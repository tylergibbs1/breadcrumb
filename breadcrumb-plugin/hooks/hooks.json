{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Read|Edit|Write|View",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR/.breadcrumb-plugin/hooks/check.sh\""
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "BREADCRUMB_SESSION_ID=\"$CLAUDE_SESSION_ID\" breadcrumb session-end \"$CLAUDE_SESSION_ID\""
          }
        ]
      }
    ]
  }
}
